<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/musicrank_item_ranknum"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:text="0"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/musicrank_item_thumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon_sample_song" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/musicrank_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Sample Name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/musicrank_item_artist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Sample Artist" />
    </LinearLayout>
</LinearLayout>